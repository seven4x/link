{
    "manifest_version": 2,
    "name": "破茧",
    "version": "1.0",
    "description": "快速收集链接的工具",
    "browser_action": {
        "default_icon": {
            "16": "logo192.png",
            "24": "logo512.png",
            "32": "logo512.png"
        },
        "default_title": "牛逼",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "author": "seven4x",
    "homepage_url": "http://bitseatech.com",
    "minimum_chrome_version": "42",
    "permissions": ["tabs","<all_urls>"],
    "update_url": "http://path/to/updateInfo.xml",
    "version_name": "1.0",
    "content_security_policy": "script-src 'self' https://bitseatech.com; object-src 'self'"
}